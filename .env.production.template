# Production Environment Template
# Copy this to .env.production and fill in the actual values
NODE_ENV=production

# Database (AWS RDS Aurora PostgreSQL)
DATABASE_URL=postgresql://username:password@your-rds-endpoint.amazonaws.com:5432/cosmicspace

# AWS Configuration (Real AWS)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# S3 Configuration
AWS_S3_BUCKET=cosmicspace-media
# No endpoint needed for production AWS

# SES Configuration (Email)
# No endpoint needed for production AWS
EMAIL_FROM=noreply@cosmicspace.app

# Application URLs
API_URL=https://api.cosmicspace.app
FRONTEND_URL=https://cosmicspace.app

# JWT Secret (Use AWS Secrets Manager in production)
# JWT_SECRET will be retrieved from AWS Secrets Manager

# Storage Configuration
STORAGE_TYPE=s3

# CORS Origins
CORS_ORIGINS=https://cosmicspace.app,https://www.cosmicspace.app