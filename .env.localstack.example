# LocalStack Development Environment - EXAMPLE FILE
# Copy this to .env.localstack and fill in real values
# NEVER commit .env.localstack with real credentials

NODE_ENV=development

# Server Port
PORT=7779

# Database (Local PostgreSQL in Docker)
DATABASE_URL=postgresql://admin:your-password-here@localhost:5432/cosmicspace?schema=public

# AWS Configuration (LocalStack)
AWS_ENDPOINT=http://localhost:4566
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
S3_BUCKET_NAME=cosmicspace-media
AWS_S3_FORCE_PATH_STYLE=true

# SES Configuration (Email)
AWS_SES_ENDPOINT=http://localhost:4566
EMAIL_FROM=noreply@cosmicspace.app
EMAIL_FROM_NAME=CosmicSpace
ENABLE_EMAIL_SENDING=false

# Application URLs
API_URL=http://localhost:7779/api
FRONTEND_URL=http://localhost:7777

# JWT Configuration
JWT_SECRET=your-jwt-secret-change-in-production
JWT_REFRESH_SECRET=your-refresh-secret-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Storage Configuration
STORAGE_TYPE=s3
LOCAL_STORAGE_PATH=./uploads

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:7777,http://localhost:8081,http://localhost:8082,http://10.0.2.2:7779,http://192.168.0.18:7777

# Redis (optional for local)
REDIS_URL=redis://localhost:6379

# Email (using Gmail for development)
# To create Gmail app password: https://myaccount.google.com/apppasswords
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-gmail-app-password-here
SMTP_FROM=your-email@gmail.com
